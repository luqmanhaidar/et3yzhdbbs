<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ntsky.bbs.domain">
	<class name="Post" table="ntsky_t_post" lazy="false">
        <id name="id" column="id">
			<generator class="increment"/>
        </id>
		<property name="forumId" column="forum_id" not-null="true"/>
		<property name="topicId" column="topic_id" not-null="true"/>
		<property name="title" column="title"/>
		<property name="content" column="content" not-null="true"/>
		<property name="userId" column="user_id" not-null="true"/>
		<property name="username" column="username" not-null="true"/>
		<property name="ip" column="ip" not-null="true"/>
		<property name="dateEdited" column="date_edited"/>
		<property name="editCount" column="edit_count"/>
		<property name="dateCreated" column="date_created" not-null="true"/>
		
		<!-- 
		<many-to-one name="topic"
	  	      insert="false" 
               update="false" 
               column="topic_id" 
               class="Topic"/>
               
	    
	    <one-to-one name="user"
    	    class="User"
        	constrained="true" property-ref="username"/>		
        -->
	</class>
</hibernate-mapping>
