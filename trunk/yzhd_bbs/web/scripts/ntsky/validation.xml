<?xml version="1.0" encoding="utf-8"?>
<forms>

	<form id="login">
		<item name="username" dataType="Require" msg="用户名不为空" /> 
		<item name="username" dataType="Limit" min="2" max="12" msg="用户名长度2~12个字符" />
		<item name="password" dataType="Require" msg="密码不为空" />
		<item name="password" dataType="Limit" min="6" max="20" msg="密码长度6~20个字符" />
		<item name="vCode" dataType="Require" msg="验证码不为空" />
		<item name="vCode" dataType="Number" msg="验证码只能为数字" />		
		<item name="vCode" dataType="Limit" min="4" max="4" msg="验证码只能为4位" />				
	</form>

	<form id="signup">
		<item name="username" dataType="Require" msg="用户名不为空" /> 
		<item name="username" dataType="Limit" min="2" max="12" msg="用户名长度2~12个字符" />
		<item name="password" dataType="Require" msg="密码不为空" />
		<item name="password" dataType="Limit" min="6" max="20" msg="密码长度6~20个字符" />
		<item name="repeatPassword" dataType="Repeat" to="password" msg="两次输入的密码不一致" />
		<item name="vCode" dataType="Require" msg="验证码不为空" />
		<item name="vCode" dataType="Number" msg="验证码只能为数字" />		
		<item name="vCode" dataType="Limit" min="4" max="4" msg="验证码只能为4位" />	
		<!-- <item name="email" dataType="Require" msg="信箱地址不为空" />  -->		
		<!-- <item name="email" dataType="Email" msg="信箱格式不正确" /> -->
		<!-- <item name="question" dataType="Require" msg="安全提示问题不为空" /> -->	
		<!-- <item name="answer" dataType="Require" msg="问题答案不为空" />	 -->
	</form>	

	<form id="editPassword">
		<item name="oldPassword" dataType="Require" msg="原始密码不为空" /> 
		<item name="oldPassword" dataType="Limit" min="6" max="20" msg="原始密码长度6~20个字符" />
		<item name="password" dataType="Require" msg="新密码不为空" />
		<item name="password" dataType="Limit" min="6" max="20" msg="新密码长度6~20个字符" />
		<item name="repeatPassword" dataType="Repeat" to="password" msg="两次输入的密码不一致" />
	</form>	

	<form id="editUser">
		<!-- <item name="email" dataType="Require" msg="信箱地址不为空" /> -->		
		<!-- <item name="email" dataType="Email" msg="信箱格式不正确" /> -->		
	</form>	

	<form id="recoverPassword">
		<item name="username" dataType="Require" msg="用户名不为空" /> 
		<item name="username" dataType="Limit" min="2" max="12" msg="用户名长度2~12个字符" />
		<item name="vCode" dataType="Require" msg="验证码不为空" />
		<item name="vCode" dataType="Number" msg="验证码只能为数字" />		
		<item name="vCode" dataType="Limit" min="4" max="4" msg="验证码只能为4位" />					
	</form>	

	<form id="recoverPassword2">
		<item name="answer" dataType="Require" msg="密码提示答案不为空" />
	</form>	

	<form id="writeMessage">
		<item name="receiver" dataType="Require" msg="消息接收者不为空" /> 
		<item name="title" dataType="Require" msg="消息标题不为空" />
		<item name="title" dataType="Limit" max="40" msg="消息标题最多40个字符" />	
		<item name="content" dataType="Require" msg="消息内容不为空" />
	</form>
	
	<form id="createTopic">
		<item name="title" dataType="Require" msg="帖子标题不为空" />
		<item name="title" dataType="Limit" max="50" msg="帖子标题最多50个字符" />	
		<item name="content" dataType="Fckeditor" msg="帖子内容不为空" />
		<item name="content" dataType="Limit" max="65536" msg="帖子内容最多65536个字符" />
	</form>
	
	<form id="post">
		<!--<item name="title" dataType="Require" msg="帖子标题不为空" />-->
		<item name="title" dataType="Limit" max="255" msg="帖子标题最多255个字符" />	
		<item name="content" dataType="Fckeditor" msg="帖子内容不为空" />
		<item name="content" dataType="Limit" max="65536" msg="帖子内容最多65536个字符" />
	</form>	

	<form id="annoucement">
		<item name="title" dataType="Require" msg="公告标题不为空" />
		<item name="title" dataType="Limit" max="40" msg="公告标题小于40个字符" />
		<!-- <item name="content" dataType="Fckeditor" msg="公告内容不为空" /> -->
	</form>	

	<form id="categoryForm">
		<item name="name" dataType="Require" msg="类别名称不为空" />
		<item name="name" dataType="Limit" max="100" msg="类别名称小于100个字符" />
		<item name="displayOrder" dataType="Require" msg="显示次序不为空" />
		<item name="displayOrder" dataType="Number" msg="显示次序只能为数字" />
	</form>	
		
</forms>