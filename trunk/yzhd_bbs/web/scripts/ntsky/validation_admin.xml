<?xml version="1.0" encoding="utf-8"?>
<forms> 

	<form id="setBasicForm">
		<item name="bbsName" dataType="Require" msg="BBS站点名称不为空" /> 
		<item name="bbsDomain" dataType="Require" msg="论坛URL不为空" />
		<!--<item name="bbsDomain" dataType="Url" msg="论坛URL格式错误,请参考'http://www.domain.com'" />-->
		<item name="webName" dataType="Require" msg="网站名称不为空" />
		<item name="webDomain" dataType="Require" msg="网站URL不为空" />
		<!-- <item name="webDomain" dataType="Url" msg="网站URL格式错误,请参考'http://www.domain.com'" /> -->
		<item name="logo" dataType="Require" msg="网站Logo不为空" />
		<!-- <item name="bannerUrl" dataType="Url" msg="网站Banner格式错误,请参考'http://www.domain.com'" />-->
		<item name="masterEmail" dataType="Require" msg="管理员邮箱不为空" />
		<item name="masterEmail" dataType="Email" msg="管理员邮箱格式错误，请参考'edison@gmail.com'" />
		<item name="copyright" dataType="Require" msg="版权信息不为空" />
	</form>
	
	<form id="setSeoForm">
		<item name="keywords" dataType="Require" msg="网站关键字不为空" />
		<item name="description" dataType="Require" msg="网站描述不为空" />
	</form>

	<form id="setMoneyForm">
		<item name="addTopic" dataType="Require" msg="发帖增加金钱不为空" /> 
		<item name="addTopic" dataType="Integer" msg="发帖增加的金钱只能为整数" /> 
		<item name="addPost" dataType="Require" msg="回复增加金钱不为空" /> 
		<item name="addPost" dataType="Integer" msg="回复增加的金钱只能为整数" /> 
		<item name="eliteTopic" dataType="Require" msg="设置精华帖增加金钱不为空" /> 
		<item name="eliteTopic" dataType="Integer" msg="设置精华帖增加的金钱只能为整数" /> 
		<item name="deleteTopic" dataType="Require" msg="删除帖子减少金钱不为空" /> 
		<item name="deleteTopic" dataType="Integer" msg="设删除帖子减少金钱只能为整数" /> 
	</form>	
	
	<form id="setRegisterForm">
		<item name="agreement" dataType="Require" msg="注册许可协议内容不为空" /> 
	</form>		
	
	<form id="setTopic">
		<item name="minWord" dataType="Require" msg="帖子最小字数不为空" />
		<item name="minWord" dataType="Number" msg="帖子最小字数只能为整数" />
		<item name="maxWord" dataType="Require" msg="帖子最大字数不为空" />
		<item name="maxWord" dataType="Number" msg="帖子最大字数只能为整数" />
		<item name="ballotOptionNum" dataType="Require" msg="帖子最大投票数不为空" />
		<item name="ballotOptionNum" dataType="Number" msg="帖子最大投票数只能为整数" />
		
	</form>	
	
	<form id="setEmailForm">
		<item name="smtpHost" dataType="Require" msg="发送邮件服务器信息不为空" />
		<item name="username" dataType="Require" msg="登陆邮件用户名不为空" />
		<item name="password" dataType="Require" msg="登陆邮件密码不为空" />
		<item name="systemMail" dataType="Require" msg="系统邮件信息不为空" />
		<item name="systemMail" dataType="Email" msg="管理员邮箱格式错误，请参考'yntsky@gmail.com'" />
	</form>	

	<form id="annoucementForm">
		<item name="title" dataType="Require" msg="公告标题不为空" />
		<item name="title" dataType="Limit" max="100" msg="公告标题小于100个字符" />
		<!-- <item name="content" dataType="Fckeditor" msg="公告内容不为空" /> -->
	</form>	
	
	<form id="forum">
		<item name="name" dataType="Require" msg="论坛版块名称不为空" />
		<item name="name" dataType="Limit" max="100"  msg="论坛版块名称小于100个字符"/>
		<item name="descriptionEditor" dataType="Fckeditor" msg="论坛版块描述信息不为空" />
		<item name="displayOrder" dataType="Require" msg="二级论坛排序编号不为空" /> 
		<item name="displayOrder" dataType="Number" msg="二级论坛排序编号只能为整数" /> 
	</form>
	
	<form id="orderTopForum">
		<item name="branchId" dataType="Require" msg="顶层论坛分支编号不为空" /> 
		<item name="branchId" dataType="Number" msg="顶层论坛分支编号只能为整数" /> 
	</form>	

	<form id="createUser">
		<item name="username" dataType="Require" msg="用户名不为空" /> 
		<item name="username" dataType="Limit" min="2" max="12" msg="用户名长度2~12个字符" />
		<item name="password" dataType="Require" msg="密码不为空" />
		<item name="password" dataType="Limit" min="6" max="20" msg="密码长度6~20个字符" />
		<item name="email" dataType="Email" msg="信箱格式不正确" />	
		<item name="question" dataType="Require" msg="安全提示问题不为空" />	
		<item name="answer" dataType="Require" msg="问题答案不为空" />			
	</form>
	
	<form id="help">
		<item name="title" dataType="Require" msg="帮助标题不为空" />
		<item name="title"  dataType="Limit" min="4" max="255" msg="帮助标题大于4小于255个字符" />
		<item name="content" dataType="Fckeditor" msg="帮助内容不为空" />
	</form>	
	
	<form id="imageLink">
		<item name="logo" dataType="Require" msg="请上传友情链接图片" />
		<item name="url" dataType="Require" msg="友情链接地址不为空" />
		<item name="url" dataType="Url" msg="友情链接地址格式错误,请参考'http://www.baidu.com'" />
		<item name="description" dataType="Require" msg="网站简要说明不为空" />
		<item name="displayOrder" dataType="Require" msg="链接排序不为空" />
		<item name="displayOrder" dataType="Number" msg="链接排序只能为整数" />
	</form>	
	<form id="textLink">
		<item name="name" dataType="Require" msg="链接描述不为空" />
		<item name="url" dataType="Require" msg="友情链接地址不为空" />
		<item name="url" dataType="Url" msg="友情链接地址格式错误,请参考'http://www.baidu.com'" />
		<item name="description" dataType="Require" msg="网站简要说明不为空" />
		<item name="displayOrder" dataType="Require" msg="链接排序不为空" />
		<item name="displayOrder" dataType="Number" msg="链接排序只能为整数" />
	</form>	

	<form id="adminInfo">
		<item name="username" dataType="Require" msg="用户名不为空" />
		<item name="username" dataType="Limit" min="2" max="12" msg="用户名长度范围2~12" />
		<item name="password" dataType="Require" msg="密码不为空" />
		<item name="password" dataType="Limit" min="6" max="20" msg="密码长度范围6~20" />
		<item name="repeatPassword" dataType="Repeat" to="password" msg="两次输入的密码不一致" />
		<item name="permission" dataType="Group" min="1" msg="管理员必须拥有一种以上权限" />
	</form>	
	
	<form id="createRoleForm">
		<item name="name" dataType="Require" msg="角色名称不为空" />
		<item name="name" dataType="Limit" max="255" msg="角色名称小于255个字符" />
		<item name="minTopic" dataType="Require" msg="最少主题不为空" />
		<item name="minTopic" dataType="Number" msg="最少主题只为数字" />
		<item name="icon" dataType="Require" msg="角色图片不为空" />
	</form>	

	<form id="updateAdmin">
		<item name="permission" dataType="Group" min="1" msg="管理员必须拥有一种以上权限" />
	</form>	

	<form id="editPasswordForm">
		<item name="oldPassword" dataType="Require" msg="原始密码不为空" /> 
		<item name="oldPassword" dataType="Limit" min="6" max="20" msg="原始密码长度6~20个字符" />
		<item name="password" dataType="Require" msg="新密码不为空" />
		<item name="password" dataType="Limit" min="6" max="20" msg="新密码长度6~20个字符" />
		<item name="repeatPassword" dataType="Repeat" to="password" msg="两次输入的密码不一致" />
	</form>	

	<form id="badwordForm">
		<item name="oldStr" dataType="Require" msg="待转化的文字不为空" /> 
		<item name="replaceStr" dataType="Require" msg="转换后的文字不为空" />
	</form>	

	<form id="categoryForm">
		<item name="name" dataType="Require" msg="类别名称不为空" />
		<item name="name" dataType="Limit" max="100" msg="类别名称小于100个字符" />
		<item name="displayOrder" dataType="Require" msg="显示次序不为空" />
		<item name="displayOrder" dataType="Number" msg="显示次序只能为数字" />
	</form>	

</forms>